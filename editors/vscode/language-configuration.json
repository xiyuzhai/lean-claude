{
    "comments": {
        "lineComment": "--",
        "blockComment": ["/-", "-/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["⟨", "⟩"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["⟨", "⟩"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["⟨", "⟩"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\"'`]*$|^.*\\([^)\"'`]*$|^.*\\[[^\\]\"'`]*$|^.*(do|where|by)\\s*$",
        "decreaseIndentPattern": "^(.*\\*/)?\\s*\\}.*$|^(.*\\*/)?\\s*\\).*$|^(.*\\*/)?\\s*\\].*$"
    },
    "folding": {
        "markers": {
            "start": "^\\s*--\\s*#region",
            "end": "^\\s*--\\s*#endregion"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}